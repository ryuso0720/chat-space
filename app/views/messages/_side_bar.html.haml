.chat-side
 .side-bar
  .side-bar__items
   %p.side-bar__items__name
    = current_user.name
   %ul.side-bar__items__icons
    %li.side-bar__items__new-group 
     = link_to new_group_path do
      = icon('fas','edit')
    %li.side-bar__items__edit-user
     = link_to edit_user_path(current_user) do
      = icon('fas', 'cog')

   
 .groups
  - current_user.groups.each do |group|
   .group
    = link_to group_messages_path(group) do
     %p.group__group-name
      = group.name
     %p.group__latest-message
      まだメッセージがありません
   
